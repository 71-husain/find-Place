<div class="fit-body row mt-3 mb-3">
    <div class="signup-body col-lg-6 col-md-8 col-sm-10 col-12 offset-lg-3 offset-md-2 offset-sm-1 px-5">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text"
                 name="username"
                 id="username"
                 class="form-control"
                 required
                 />
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email"
                 name="email"
                 id="email"
                 class="form-control"
                 required
                 />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password"
                 name="password"
                 id="password"
                 class="form-control"
                 required
                 />
            </div>
            <button class="btn btn-success w-100">SignUp</button>
        </form>
    </div>
</div>
